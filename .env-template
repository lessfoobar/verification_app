# User Verification Service - Environment Configuration
# ======================================================
# Copy this file to .env and configure your values
#
# SECURITY NOTE: Sensitive values (passwords, keys) are managed via Podman secrets.
# Run 'make secrets' to generate all required secrets automatically.

# === BASIC CONFIGURATION ===
PROJECT_NAME=verification-service
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# === DOMAIN & SSL ===
DOMAIN=localhost
SSL_EMAIL=admin@yourdomain.com
USE_SSL=true

# === SERVICE PORTS ===
POSTGRES_PORT=5432
REDIS_PORT=6379
OPENCV_PORT=8002
API_GRPC_PORT=8000
API_HTTP_PORT=8001
FRONTEND_PORT=3000
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443

# === DATABASE CONFIGURATION ===
POSTGRES_DB=verification_db
POSTGRES_HOST=verification-postgres

# === REDIS CONFIGURATION ===
REDIS_HOST=verification-redis
REDIS_DB=0

# === API CONFIGURATION ===
JWT_EXPIRY=24h
ALLOWED_ORIGINS=http://localhost:3000,http://localhost
CORS_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === FRONTEND CONFIGURATION ===
REACT_APP_API_URL=http://localhost:8001
REACT_APP_JITSI_URL=http://localhost:8080

# === VERIFICATION CONFIGURATION ===
VERIFICATION_PRICE_EUR=1.00
MAX_RECORDING_ATTEMPTS=3
RECORDING_DURATION_SECONDS=30
MAX_VIDEO_SIZE_MB=50
FACE_DETECTION_CONFIDENCE=0.8

# === GDPR & COMPLIANCE ===
VIDEO_RETENTION_DAYS=90
VERIFICATION_RESULT_RETENTION_DAYS=2555
AUTO_DELETE_ENABLED=true
AUDIT_LOG_ENABLED=true

# === MONITORING ===
HEALTH_CHECK_INTERVAL=30s
METRICS_ENABLED=true

# === SSL CERTIFICATE CONFIGURATION ===
CA_PASSWORD=changeit # podman secrets ca_password
CERTS_BASE_DIR=certificates
CA_DIR=${CERTS_BASE_DIR}/CA
POSTGRES_CERTS_DIR=containers/postgres/certs
NGINX_CERTS_DIR=containers/nginx/certs

# === COMPOSE ===
COMPOSE_FILE=podman-compose.yml

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# === FEATURE FLAGS ===
FEATURE_DOCUMENT_DETECTION=true
FEATURE_ADVANCED_LIVENESS=true
FEATURE_REAL_TIME_FEEDBACK=true
FEATURE_BATCH_PROCESSING=true

# SECRETS ARE HANDLED BY secret.sh - DO NOT PUT PASSWORDS HERE