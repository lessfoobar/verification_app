# User Verification Service - Environment Configuration
# Copy this file to .env and configure your values

# === GENERAL CONFIGURATION ===
PROJECT_NAME=verification-service
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# === DOMAIN & SSL ===
DOMAIN=localhost
SSL_EMAIL=admin@yourdomain.com
USE_SSL=false

# === DATABASE CONFIGURATION ===
POSTGRES_DB=verification_db
POSTGRES_USER=verification_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=verification-postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database encryption key (32 characters)
DB_ENCRYPTION_KEY=your_32_character_encryption_key_here

# === REDIS CONFIGURATION ===
REDIS_HOST=verification-redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_GRPC_PORT=8000
API_HTTP_PORT=8001
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# === FRONTEND CONFIGURATION ===
REACT_APP_API_URL=http://localhost:8001
REACT_APP_JITSI_URL=http://localhost:8080
FRONTEND_PORT=3000

# === NGINX CONFIGURATION ===
NGINX_PORT_HTTP=80
NGINX_PORT_HTTPS=443

# === SECURITY ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost
CORS_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# === GDPR & COMPLIANCE ===
DATA_RETENTION_DAYS=30
AUTO_DELETE_ENABLED=true
AUDIT_LOG_ENABLED=true

# === VERIFICATION PRICING ===
VERIFICATION_PRICE_EUR=1.00
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# === MONITORING ===
HEALTH_CHECK_INTERVAL=30s
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# === EMAIL NOTIFICATIONS ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# === WEBHOOK CONFIGURATION ===
WEBHOOK_TIMEOUT=30s
WEBHOOK_RETRY_ATTEMPTS=3